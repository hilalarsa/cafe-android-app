<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/meja_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/no_meja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No Meja"
            android:inputType="text" />
        <EditText
            android:id="@+id/jumlah_kursi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumalah Kursi"
            android:layout_below="@id/no_meja"
            android:inputType="text" />
        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status Meja"
            android:layout_below="@id/jumlah_kursi"
            android:inputType="text" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah data dummy"></Button>
    <ListView
        android:id="@+id/listViewMeja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>